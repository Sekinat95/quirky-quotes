<h1 class="mt-4">welcome admin</h1>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-list-alt"></i>quirky quotes</h1>
      <%- include ('./partials/messages') %>
      <form action="/quotes/quote" method="POST">
        <div class="form-group">
          <label for="quote">Quote</label>
          <textarea
            
            id="quote"
            name="quote"
            class="form-control"
            placeholder="type a new quote"
          ></textarea>
        </div>
        <div class="form-group">
          <label for="Author">Author</label>
          <input
            type="text"
            id="author"
            name="author"
            class="form-control"
            placeholder="enter quote author"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">post</button>
      </form>
      <p class="lead mt-4">
        feeling blue? <a href="/quotes/all">see all our quirky quotes</a>
      </p>
    </div>
  </div>
</div>

<a href="/users/logout" class="btn btn-secondary">Logout</a>
